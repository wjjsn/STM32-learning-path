#include "motor.h"

void motorSet(uint8_t motor, uint8_t dir, uint8_t speed)
{
	GPIO_PinState in1, in2;
	switch(dir)
	{
		case MOTOR_FORWARD:
			in1 = GPIO_PIN_SET;//1
			in2 = GPIO_PIN_RESET;//0
			break;
		case MOTOR_BACKWARD:
			in1 = GPIO_PIN_RESET;//0
			in2 = GPIO_PIN_SET;//1
			break;
		case MOTOR_BREAK:
			in1 = GPIO_PIN_SET;//0
			in2 = GPIO_PIN_SET;//1
			break;
		case MOTOR_STOP:
			in1 = GPIO_PIN_RESET;//0
			in2 = GPIO_PIN_RESET;//0
			speed = 0;
	}
}
